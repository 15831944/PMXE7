	void __fastcall btCancelClick(TObject *Sender);
private:	// User declarations
	TOnFilteredDataSet FOnFilteredDataSet;
	TClientBroker *FBroker;
	TZClientQuery *FQuery;
protected:
	virtual String __fastcall BuildFilters()=0;
