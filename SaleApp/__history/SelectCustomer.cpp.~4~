//---------------------------------------------------------------------------
void __fastcall TSelectCustomerForm::FillCustomerList()
{
  try{
	  lvCustomerList->BeginUpdat();
	  Query->Close();
	  Query->SQL->Text="";
	  Query->Open();
	  while(!Query->Eof)
	  {
		 TListViewItem* vItem=lvCustomerList->Items->Add();
		 Query->Next();
	  }
  }
  __finally
  {
   lvCustomerList->EndUpdat();
  }
}
